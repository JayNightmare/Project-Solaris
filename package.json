{
    "name": "project-solaris",
    "displayName": "Project Solaris",
    "description": "A customized DEEP SPACE theme with interactive solar system file visualization.",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.104.0"
    },
    "categories": [
        "Other",
        "Visualization"
    ],
    "icon": "resources/sun-icon.png",
    "publisher": "JayNightmare",
    "author": "Jay",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jaynightmare/project-solaris.git"
    },
    "homepage": "https://github.com/jaynightmare/project-solaris",
    "bugs": {
        "url": "https://github.com/jaynightmare/project-solaris/issues"
    },
    "activationEvents": [
        "onView:solaris-sidebar"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "solaris-container",
                    "title": "Solaris",
                    "icon": "resources/sun-icon.svg"
                }
            ]
        },
        "views": {
            "solaris-container": [
                {
                    "type": "webview",
                    "id": "solaris-sidebar",
                    "name": "Star System"
                }
            ]
        },
        "commands": [
            {
                "command": "project-solaris.helloWorld",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.9",
        "@types/node": "20.x",
        "@types/vscode": "^1.104.0",
        "@typescript-eslint/eslint-plugin": "^8.10.0",
        "@typescript-eslint/parser": "^8.7.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.13.0",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "ignore": "^7.0.5"
    }
}
